<br><br>
<%= form_for skill,:html => {:class => 'form-horizontal'} do |f| %>
  <% if skill.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(skill.errors.count, "error") %> prohibited this skill from being saved:</h2>

      <ul>
      <% skill.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
    <%= f.text_field :name, class: "form-control", required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :power, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
    <%= f.number_field :power, class: "form-control", required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :max_pp, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
    <%= f.number_field :max_pp, class: "form-control", required: true%>
    </div>
  </div>
   <div class="form-group">
    <%= f.label :element_type, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
    <%= select_tag('skill[element_type]', options_for_select([
      ['Normal', "Normal"], 
      ['Fire', "Fire"],
      ['Fighting', "Fighting"],
      ['Water', "Water"],
      ['Flying', "Flying"],
      ['Grass', "Grass"],
      ['Poison', "Poison"],
      ['Ground', "Ground"],
      ['Psychic', "Psychic"],
      ['Rock', "Rock"],
      ['Ice', "Ice"],
      ['Bug', "Bug"],
      ['Dragon', "Dragon"],
      ['Ghost', "Ghost"],
      ['Dark', "Dark"],
      ['Steel', "Steel"],
      ['Fairy', "Fairy"]
      ], :selected => skill.element_type), :include_blank => '--- Select Element Type ---', class: 'form-control', required: true) %>
    </div>
  </div>

  <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit'Submit', class: "btn btn-primary"%>
  </div>
  </div>
<% end %>
