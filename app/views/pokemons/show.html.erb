
<%= render 'pages/nav' %>
    <div class="container">

      <div class="panel panel-info">
      <div class="panel-heading">Detail Pokedex</div>
        <div class="panel-body">
          <div class="panel-body-show">
          <div class="button">
            <%= link_to 'Heal', "#", class: "btn btn-warning" %>
            <%= link_to 'Edit', edit_pokemon_path(@pokemon), class: "btn btn-success" %>
            <%= link_to 'Destroy', @pokemon, :class=>"btn btn-danger" , method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
          
            <br><br>
            <div class="row">
            <div class="col-md-3">
              <center>
              <div class="photo">
                <%= image_tag @pokemon.pokedex.image_url %>
              </div>
              </center>
            </div>
            <div class="col-md-9">
            <table class="table table-striped table-bordered" cellpadding="10px">
              <tr>
                <td width="35%"><strong>Name </strong></td>
                <td><%= @pokemon.name %></td>
              </tr>
              <tr>
                <td><strong>Pokedex</strong></td>
                <td><%= @pokemon.pokedex.name %></td>
              </tr>
              <tr>
                <td><strong>Level</strong></td>
                <td><%= @pokemon.level %></td>
              </tr>
              <tr>
                <td><strong>Max Health Point</strong></td>
                <td><%= @pokemon.max_health_point %></td>
              </tr>
              <tr>
                <td><strong>Current Health Point</strong></td>
                <td><%= @pokemon.current_health_point %></td>
              </tr>
              <tr>
                <td><strong>Attack</strong></td>
                <td><%= @pokemon.attack %></td>
              </tr>
              <tr>
                <td><strong>Defense</strong></td>
                <td><%= @pokemon.defence %></td>
              </tr>
              <tr>
                <td><strong>Speed</strong></td>
                <td><%= @pokemon.speed %></td>
              </tr>
              <tr>
                <td><strong>Current Experience</strong></td>
                <td><%= @pokemon.current_experience %></td>
              </tr>
            </table>
          </div>
            
            <br>
              </div>
              
            </div>
        </div>
      </div>



    </div> <!-- /container -->
<%= render 'pages/footer' %>