<%= form_for pokemon,:html => {:class => 'form-horizontal'} do |f| %>
  <% if pokemon.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(pokemon.errors.count, "error") %> prohibited this pokemon from being saved:</h2>

      <ul>
      <% pokemon.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
    <%= f.text_field :name, class: "form-control", required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :pokedex_id, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
    <%= f.select :pokedex_id, options_for_select(Pokedex.all.collect {|u| [u.name, u.id]},
                            :selected => pokemon.pokedex_id), 
                           {:include_blank => "--- Select Pokedex ---"},
                           {:required => true, :class => 'form-control'} %>

    </div>
  </div>

  <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit'Submit', class: "btn btn-primary"%>
  </div>
  </div>
<% end %>
