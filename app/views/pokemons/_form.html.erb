<%= form_for pokemon,:html => {:class => 'form-horizontal'} do |f| %>
  <% if pokemon.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(pokemon.errors.count, "error") %> prohibited this pokemon from being saved:</h2>

      <ul>
      <% pokemon.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= label_tag 'Name', nil, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
    <%= text_field_tag 'name', nil, class: "form-control", required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag 'pokedex_id', nil, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
     <%= select_tag('pokedex_id',  options_for_select(Pokedex.all.collect {|p| [ p.name, p.id ] }), prompt: '--- Choose Pokedex ---' , class: "form-control", required: true) %>

    </div>
  </div>

  <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
    <%= submit_tag 'Submit', class: "btn btn-primary"%>
  </div>
  </div>
<% end %>
