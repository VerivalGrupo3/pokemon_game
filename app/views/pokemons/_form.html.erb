<br>
<%= form_for pokemon, validate: true, :html => {:class => 'form-horizontal'} do |f| %>

  <div class="form-group">
    <%= label_tag 'Name', nil, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
    <%= text_field_tag 'name', nil, class: "form-control" %>
    <%= content_tag(:div, "#{pokemon.errors.messages[:name].to_sentence}", class: ["field_with_errors_pokemon"]) if pokemon.errors.any?%>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag 'pokedex_id', nil, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
     <%= select_tag('pokedex_id',  options_for_select(Pokedex.all.collect {|p| [ p.name, p.id ] }) , class: "form-control") %>
     <%= content_tag(:div, "#{ @pokedex_id_errors}", class: ["field_with_errors_pokemon"]) if pokemon.errors.any?%>

    </div>
  </div>

  <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
    <%= submit_tag 'Submit', class: "btn btn-primary"%>
  </div>
  </div>
<% end %>
